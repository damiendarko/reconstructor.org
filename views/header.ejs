<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>reconstructor <% if (title) { %> : <%= title %> <% } %></title>
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <!-- styles -->
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/app.css" rel="stylesheet">
    <link href="css/bootstrap-responsive.min.css" rel="stylesheet">

    <!-- fav and touch icons -->
    <link rel="shortcut icon" href="img/favicon.ico">
    <link rel="apple-touch-icon" href="img/apple-touch-icon.png">
    <link rel="apple-touch-icon" sizes="72x72" href="img/apple-touch-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="114x114" href="img/apple-touch-icon-114x114.png">
  </head>
  <body>
    <% if (flash) { %>
    <div id="messages" class="">
      <% for (var i in flash.info) { %> 
      <div class="alert alert-info">
        <a class="close" data-dismiss="alert">×</a>
        <%= flash.info[i] %>
      </div>
      <% } %>
      <% for (var i in flash.error) { %> 
      <div class="alert alert-error">
        <a class="close" data-dismiss="alert">×</a>
        <%= flash.error[i] %>
      </div>
      <% } %>
    </div>
    <% } %>
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="brand" href="/"><%= appTitle %></a>
          <div class="nav-collapse">
            <ul class="nav">
            </ul>
            <ul class="nav pull-right">
              <% if (request.session.username) { %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= request.session.username %><b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><a href="#">account</a></li>
                  <li><a href="/logout/<%= request.session.username %>">logout</a></li>
                </ul>
              </li>
              <% } else { %>
              <a href="/login" class="btn btn-primary">Login</a>
              <a href="/signup" class="btn">Signup</a>
              <% } %>
            </ul>
          </div>
        </div>
      </div>
    </div>
    
